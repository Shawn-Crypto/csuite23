{
  "name": "csuite23-optimized",
  "type": "module",
  "version": "1.0.0",
  "description": "Optimized build system for Lotuslion Investment Course Platform",
  "main": "index.js",
  "scripts": {
    "build": "node build/build.js",
    "build:dev": "npm run clean && npm run build:css:dev && npm run build:js:dev",
    "build:webpack": "npm run clean && npm run build:css && webpack --mode=production",
    "build:webpack:dev": "npm run clean && npm run build:css:dev && webpack --mode=development",
    "build:css": "npm run build:css:extract && npm run build:css:purge && npm run build:css:minify",
    "build:css:dev": "npm run build:css:extract",
    "build:css:extract": "node build/extract-css.js",
    "build:css:purge": "purgecss --config purgecss.config.js",
    "build:css:minify": "cleancss -o dist/css/styles.min.css dist/css/styles.purged.css",
    "build:js": "npm run build:js:bundle && npm run build:js:minify",
    "build:js:dev": "rollup -c rollup.config.js --environment NODE_ENV:development",
    "build:js:bundle": "rollup -c rollup.config.js --environment NODE_ENV:production",
    "build:js:minify": "terser dist/js/bundle.js -o dist/js/bundle.min.js --compress --mangle --module",
    "optimize:images": "node build/optimize-images.js",
    "optimize:fonts": "node build/font-optimizer.js",
    "optimize:all": "npm run optimize:images && npm run optimize:fonts",
    "performance:summary": "node build/performance-summary.js",
    "verify:optimizations": "node build/verify-optimizations.js",
    "analyze": "npm run build && bundlesize",
    "analyze:webpack": "webpack --mode=production --env analyze",
    "clean": "rimraf dist",
    "serve": "serve dist -l 3000",
    "dev": "node build/dev-server.js",
    "watch": "npm run build:dev && npm-watch"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-replace": "^5.0.5",
    "babel-loader": "^9.1.3",
    "bundlesize": "^0.18.1",
    "clean-css-cli": "^5.6.2",
    "core-js": "^3.33.0",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "npm-watch": "^0.11.0",
    "purgecss": "^5.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "rollup-plugin-analyzer": "^4.0.0",
    "serve": "^14.2.1",
    "terser": "^5.26.0",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4"
  },
  "bundlesize": [
    {
      "path": "dist/js/bundle.min.js",
      "maxSize": "10kb"
    },
    {
      "path": "dist/css/styles.min.css",
      "maxSize": "15kb"
    }
  ],
  "watch": {
    "build:dev": {
      "patterns": ["js", "css", "index.html"],
      "extensions": "js,css,html",
      "quiet": false
    }
  }
}
