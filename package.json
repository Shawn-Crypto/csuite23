{
  "name": "lotuslion-course",
  "version": "1.0.0",
  "description": "Lotuslion Stock Investment Course Landing Page",
  "scripts": {
    "build": "echo 'Static site - no build required'",
    "start": "echo 'Static site ready for deployment'",
    "dev": "node -e \"console.log('Starting static server on port 3000...'); require('child_process').spawn('python3', ['-m', 'http.server', '3000'], {stdio: 'inherit'})\"",
    "test": "playwright test",
    "test:unit": "jest",
    "test:e2e": "playwright test --project=e2e-chrome",
    "test:e2e:mobile": "playwright test --project=e2e-mobile",
    "test:api": "playwright test --project=api-integration",
    "test:performance": "playwright test --project=performance",
    "test:all": "npm run test:unit && npm run test:e2e && npm run test:api && npm run test:performance",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:coverage": "jest --coverage",
    "validate:env": "node scripts/validate-env.js",
    "validate:env:verbose": "NODE_ENV=production node scripts/validate-env.js",
    "db:deploy": "node scripts/deploy-schema.js",
    "db:deploy:dry": "node scripts/deploy-schema.js --dry-run --verbose",
    "db:deploy:prod": "NODE_ENV=production node scripts/deploy-schema.js --verbose"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "razorpay": "^2.9.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "jest": "^30.0.5",
    "jsdom": "^26.1.0",
    "node-mocks-http": "^1.17.2",
    "playwright": "^1.54.2",
    "serve": "^14.2.4"
  }
}
